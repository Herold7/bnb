<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}
				Location de voyage
			{% endblock %}
			| Bnb
		</title>
        
		<link rel="icon" href="/images/icon.svg">
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Libre+Franklin:wght@900&family=Poppins:wght@300;500&display=swap" rel="stylesheet">

		{% block stylesheets %}
			<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
		{% endblock %}

		{% block javascripts %}
			{% block importmap %}
				{{ importmap('app') }}
			{% endblock %}
			<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js" integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+" crossorigin="anonymous"></script>
		{% endblock %}
	</head>
	<body>
		<header class="d-flex justify-content-between align-items-center w-100 py-3 px-5 bg-dark">
			<a href={{ path('paris') }}>
				<img src={{ asset('images/icon.svg') }} alt="logo BnB" width="100">
			</a>
			<div class="d-flex align-items-center gap-3">
				{% if is_granted('IS_AUTHENTICATED_FULLY') %}
					<a href="#" class="text-white text-decoration-none">My account</a>
					<a href={{ path('app_logout') }} class="text-white text-decoration-none">Sign out</a>
				{% else %}
					<a href={{ path('app_login') }} class="text-white text-decoration-none">Sign in</a>
					<a href={{ path('app_register') }} class="btn btn-light rounded-pill">Sign up</a>
				{% endif %}
			</div>
		</header>
		<main>
			{% block body %}{% endblock %}
		</main>
		<footer class="d-flex justify-content-center align-items-center gap-2 w-100 py-3 px-5 bg-transparent">
			<a href="{{ path('paris')}}" class="text-white text-decoration-none">Paris</a>
            <small class="text-white">•</small>
			<a href="{{ path('lasvegas')}}" class="text-white text-decoration-none">Las Vegas</a>
            <small class="text-white">•</small>
			<a href="{{ path('kyoto')}}" class="text-white text-decoration-none">Kyoto</a>
            <small class="text-white">•</small>
			<a href="{{ path('sydney')}}" class="text-white text-decoration-none">Sydney</a>
            <small class="text-white">•</small>
			<a href="{{ path('hongkong')}}" class="text-white text-decoration-none">Hong Kong</a>
		</footer>
	</body>
</html>